<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weather_info"
    android:orientation="horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:padding="10dp"
    android:background="@color/sienna"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<com.github.pwittchen.weathericonview.WeatherIconView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        custom:weatherIconColor="@color/white"
        custom:weatherIconSize="70" />-->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/weather_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/weather_day"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <!--温度-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_weather_info_temp_show"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="温度"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_weather_info_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="20℃"
                android:textColor="@color/white" />
        </LinearLayout>

        <!--湿度-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tv_weather_info_wet_show"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="湿度"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_weather_info_wet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="90RH"
                android:textColor="@color/white" />
        </LinearLayout>

        <!--气压-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="50dp"
                android:id="@+id/tv_weather_info_hum_show"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="气压"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_weather_info_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="1030hpa"
                android:textColor="@color/white" />
        </LinearLayout>

        <!--照度-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="50dp"
                android:id="@+id/tv_weather_info_light_show"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="照度"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_weather_info_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="1030l"
                android:textColor="@color/white" />
        </LinearLayout>

        <!--PM2.5-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="50dp"
                android:id="@+id/tv_weather_info_pm_show"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="PM2.5"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_weather_info_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="20℃"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>