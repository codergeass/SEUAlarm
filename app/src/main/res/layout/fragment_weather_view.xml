<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yalantis.phoenix.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <xyz.matteobattilana.library.WeatherView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/weather_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:angle="-3"
                    app:fadeOutTime="1000"
                    app:fps="40"
                    app:lifeTime="2200"
                    app:numParticles="55"
                    app:startingWeather="RAIN" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_weather_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="15℃"
                        android:textColor="@android:color/white"
                        android:textSize="70sp" />

                    <TextView
                        android:id="@+id/tv_weather_rain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="有雨"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/tv_hum"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:textSize="20sp"
                            android:text="气压"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_hum_value"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            android:textSize="20sp"
                            android:text="1000"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/tv_wet"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:textSize="20sp"
                            android:text="湿度"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_wet_value"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            android:textSize="20sp"
                            android:text="1000"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/tv_pm2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:textSize="20sp"
                            android:text="PM2.5"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_pm2_value"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            android:textSize="20sp"
                            android:text="1000"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/tv_light"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:textSize="20sp"
                            android:text="照度"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_light_value"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            android:textSize="20sp"
                            android:text="1000"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </ScrollView>

    </com.yalantis.phoenix.PullToRefreshView>

</RelativeLayout>