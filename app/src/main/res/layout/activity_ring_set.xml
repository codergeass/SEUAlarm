<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.edu.seu.cse.seualarm.controler.alarm.RingSetActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_chevron_left_white_36dp"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/saffron"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_ring_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="none"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/bg_color"/>

            <TextView
                android:id="@+id/tv_cutom_ring"
                style="@style/item_text_style"
                android:textSize="@dimen/dimen_20"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="自定义铃声"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bg_color"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
